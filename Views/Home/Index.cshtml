@model List<Department>


    <div class="font-[sans-serif]">
        <div class="bg-gradient-to-r from-blue-700 to-blue-300 w-full h-80">
            <img src="https://cms.argeya.com/Content/CompanyFiles/1005/BagimsizSayfaImg/pagetitle-1562019120710.jpg" alt="Banner Image" class="w-full h-full object-cover" />
        </div>

        <div class="-mt-60 mb-6 px-4">
            <div class="mx-auto max-w-6xl shadow-lg p-8 relative bg-white rounded">
                <div id="responseMessage" class="text-center py-2 px-4 mb-4 text-white"></div>
                <h2 class="text-xl text-gray-800 font-bold">Contact Us</h2>

                <form class="mt-8 grid sm:grid-cols-2 gap-6" method="post" asp-controller="home" asp-action="contact" id="contactForm">
                    <div>
                        <label class="text-gray-800 text-sm block mb-2" for="fullName">Full Name</label>
                        <input type="text" name="FullName" id="fullName" placeholder="Enter Name" class="w-full rounded py-2.5 px-4 border border-gray-300 text-sm focus:border-blue-600 outline-none" />
                        <div class="error-message text-red-500 text-sm mt-1" style="display:none;"></div>
                    </div>
                    <div>
                        <label class="text-gray-800 text-sm block mb-2" for="email">Email</label>
                        <input type="email" name="Email" id="email" placeholder="Email" class="w-full rounded py-2.5 px-4 border border-gray-300 text-sm focus:border-blue-600 outline-none" />
                        <div class="error-message text-red-500 text-sm mt-1" style="display:none;"></div>
                    </div>
                    <div>
                        <label class="text-gray-800 text-sm block mb-2" for="phone">Phone Number</label>
                        <input type="number" name="Number" id="phone" placeholder="Phone No." class="w-full rounded py-2.5 px-4 border border-gray-300 text-sm focus:border-blue-600 outline-none" />
                        <div class="error-message text-red-500 text-sm mt-1" style="display:none;"></div>
                    </div>
                    <div>
                        <label for="department" class="text-gray-800 text-sm block mb-2">Department</label>
                        <select id="department" name="DepartmentId" class="w-full rounded py-2.5 px-4 border border-gray-300 text-sm focus:border-blue-600 outline-none" required>
                            <option value="" disabled selected>Choose Department</option>
                            @foreach (var dp in Model)
                            {
                                <option value="@dp.DepartmentId">@dp.Name</option>
                            }
                        </select>
                        <div class="error-message text-red-500 text-sm mt-1" style="display:none;"></div>
                    </div>
                    <div>
                        <label class="text-gray-800 text-sm block mb-2" for="subject">Subject</label>
                        <input type="text" name="Subject" id="subject" placeholder="Subject" class="w-full rounded py-2.5 px-4 border border-gray-300 text-sm focus:border-blue-600 outline-none" />
                        <div class="error-message text-red-500 text-sm mt-1" style="display:none;"></div>
                    </div>
                    <div class="col-span-full">
                        <label class="text-gray-800 text-sm block mb-2" for="message">Message</label>
                        <textarea id="message" name="Message" placeholder="Message" rows="6" class="w-full rounded px-4 border border-gray-300 text-sm pt-3 focus:border-blue-600 outline-none"></textarea>
                        <div class="error-message text-red-500 text-sm mt-1" style="display:none;"></div>
                    </div>

                    <button type="submit" id="sendMessageButton" class="text-white w-max bg-[#007bff] hover:bg-blue-600 tracking-wide rounded text-sm px-4 py-2.5">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" fill='#fff' class="mr-2 inline" viewBox="0 0 548.244 548.244">
                            <path fill-rule="evenodd" d="M392.19 156.054 211.268 281.667 22.032 218.58C8.823 214.168-.076 201.775 0 187.852c.077-13.923 9.078-26.24 22.338-30.498L506.15 1.549c11.5-3.697 24.123-.663 32.666 7.88 8.542 8.543 11.577 21.165 7.879 32.666L390.89 525.906c-4.258 13.26-16.575 22.261-30.498 22.338-13.923.076-26.316-8.823-30.728-22.032l-63.393-190.153z" clip-rule="evenodd" data-original="#000000" />
                        </svg>
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>
