@model AdminViewModel

@{
    var selectedFilter = ViewData["SelectedFilter"]?.ToString();
}

<div class="p-6 bg-gray-50 min-h-screen">
    <h1 class="text-2xl font-bold mb-6 text-gray-800">Admin Panel</h1>

    <div class="mb-4">
        <ul class="flex space-x-4">
            <li>
                <a href="?filter=0"
                   class="px-4 py-2 rounded-lg text-sm font-medium bg-gray-200 hover:bg-blue-600 hover:text-white @(selectedFilter == "0" ? "bg-blue-500 text-white" : "text-gray-700")">
                    All
                </a>
            </li>
            @foreach (var department in Model.Departments)
            {
                <li>
                    <a href="?filter=@department.DepartmentId"
                       class="px-4 py-2 rounded-lg text-sm font-medium bg-gray-200 hover:bg-blue-600 hover:text-white @(selectedFilter == department.DepartmentId.ToString() ? "bg-blue-500 text-white" : "text-gray-700")">
                        @department.Name
                    </a>
                </li>
            }
        </ul>
    </div>

    <div class="overflow-x-auto shadow border border-gray-200 rounded-lg">
        <table class="w-full table-auto text-left bg-white">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-sm text-gray-600">#</th>
                    <th class="px-4 py-2 text-sm text-gray-600">Full Name</th>
                    <th class="px-4 py-2 text-sm text-gray-600">Email</th>
                    <th class="px-4 py-2 text-sm text-gray-600">Phone</th>
                    <th class="px-4 py-2 text-sm text-gray-600">Department</th>
                    <th class="px-4 py-2 text-sm text-gray-600">Subject</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model.Contacts)
                {
                    <tr class="border-t">
                        <td class="px-4 py-2 text-sm">@contact.ContactId</td>
                        <td class="px-4 py-2 text-sm">@contact.FullName</td>
                        <td class="px-4 py-2 text-sm">@contact.Email</td>
                        <td class="px-4 py-2 text-sm">@contact.Number</td>
                        <td class="px-4 py-2 text-sm">@contact.Department.Name</td>
                        <td class="px-4 py-2 text-sm">@contact.Subject</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
